from enaml.widgets import Window, Container, TextEditor, PushButton
from enaml.noncomponents.document import Document
from enaml.layout import vbox

enamldef Main(Window):
    title = 'Test Window'
    Container:
        constraints = [vbox(text_edit, button)]
        TextEditor:
            id: text_edit
            documents = [
                [Document(title='First Document', text='hello', mode='javascript'),
                Document(title='Second Document', text='hello2', mode='javascript')],
                [Document(title='Other Doc', text='hello again', mode='python')]
            ]
            theme = 'twilight'
        PushButton:
            id: button
            text = 'change text'
            clicked ::
                print text_edit.documents[0][0].text