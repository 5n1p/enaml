from enaml.widgets import Window, Slider, PushButton


enamldef SomeMain(Window):
    title = 'Foo Title'
    min_size = (400, 400)
    max_size = (600, 600)
    Slider:
        id: foo
        min_size = (30, 600)
        value :: nonlocals.title = str(value)
    Slider:
        id: sldr
        value << max(0, foo.value - 10)
        enabled = False
    PushButton:
        text = 'Enabler'
        clicked :: 
            sldr.enabled = not sldr.enabled

