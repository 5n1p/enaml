from enaml.widgets import (
    Html, Container, PushButton, ComboBox, Notebook, Page, Field, ScrollArea, 
    MainWindow, DockPane, CheckBox, ToolBar, Label, Form, Action, MenuBar,
    Menu, ActionGroup
)

from enaml.layout import hbox 


enamldef SampleMenuBar(MenuBar):
    Menu:
        title = '&File'
        Action:
            text = 'New File\tCtrl+N'
            triggered :: print 'New File'
        Action:
            text = 'Open File...\tCtrl+O'
            triggered :: print 'Open File'
        Action:
            separator = True
        Action:
            text = 'Exit'
            triggered :: print 'exiting'
    Menu:
        title = '&Edit'
        Action:
            text = 'Cut\tCtrl+X'
            triggered :: print 'Cut'
        Action:
            text = 'Copy\tCtrl+C'
            triggered :: print 'Copy'
        Action:
            text = 'Paste\tCtrl+V'
            triggered :: print 'Paste'
    Menu:
        title = '&View'
        Menu:
            title = 'Sidebar'
            Action:
                text = 'Hide Sidebar'
            Action:
                separator = True
            Action:
                text = 'Hide Open Files'
                enabled = False
        Action:
            separator = True
        ActionGroup:
            Action:
                text = 'Perspective 1'
                checkable = True
                checked = True
                status_tip = 'Change to %s' % text
            Action:
                checkable = True
                text = 'Perspective 2'
                status_tip = 'Change to %s' % text
            Action:
                checkable = True
                text = 'Perspective 3'
                status_tip = 'Change to %s' % text
            Action:
                checkable = True
                text = 'Perspective 4'
                status_tip = 'Change to %s' % text


enamldef SampleToolBar(ToolBar):
    Action:
        text = 'Button'
        tool_tip = text
    ActionGroup:
        Action:
            separator = True
        Action:
            checkable = True
            text = 'Exclusive' 
        Action:
            checkable = True
            text = 'ToolBar'
        Action:
            checkable = True
            text = 'Buttons'
        Action:
            separator = True
    Action:
        checkable = True
        text = 'Checkable'
    Action:
        checkable = True
        text = 'ToolBar'
    Action:
        checkable = True
        text = 'Buttons'


enamldef SampleContent(Container):
    padding = 0
    constraints = [hbox(notebook, html)]
    Notebook:
        id: notebook
        constraints = [width >= 400]
        Page:
            title = 'Tab One'
            Container:
                Field:
                    id: fld
                    text = '<h1><center>Hello World!</center></h1>'
                Field:
                    pass
        Page:
            title = 'Tab Two'
        Page:
            title = 'Tab Three'
        Page:
            title = 'Tab Four'
    Html:
        id: html
        hug_width = 'weak'
        source << fld.text


enamldef SampleDock(DockPane):
    Container:
        ComboBox:
            items = ['top', 'bottom', 'left', 'right']
            index = 0
        PushButton:
            text = 'Apply Changes'
        Form:
            hug_height = 'strong'
            padding = 0
            Label:
                text = 'Color'
            Field:
                pass
            Label:
                text = 'Blend'
            Field:
                pass
        CheckBox:
            text = 'Sync'
        CheckBox:
            text = 'Block'
        CheckBox:
            text = 'Difference'


