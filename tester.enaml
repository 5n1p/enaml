

from enaml.widgets.api import Window, PushButton, Container, Slider


enamldef View(Window):
    Container:
        PushButton:
            text << str(sldr.value)
        PushButton:
            text = 'Bar'
        PushButton:
            text = 'Baz'
            clicked :: print 'I was clicked'
        Slider:
            id: sldr


def main():
    from enaml.qt_application import QtApplication
    view = View()
    app = QtApplication([view])
    app.start()

